<?xml version="1.0" encoding="UTF-8"?>
<!-- This file contains CUSTOM mapping of keys to actions within XBMC -->

<!-- The format is:                      -->
<!--    <device>                         -->
<!--      <button>action</button>        -->
<!--    </device>                        -->

<!-- To map keys from other remotes using the RCA protocol, you may add <universalremote> blocks -->
<!-- In this case, the tags used are <obc#> where # is the original button code (OBC) of the key -->
<!-- You set it up by adding a <universalremote> block to the window or <global> section:       -->
<!--    <universalremote>             -->
<!--       <obc45>Stop</obc45>         -->
<!--    </universalremote>            -->

<!-- Note that the action can be a built-in function.                 -->
<!--  eg <B>ActivateWindow(MyMusic)</B>                         -->
<!-- would automatically go to My Music on the press of the B button. -->

<keymap>
  <global>
    <keyboard>
     <!-- MX3 Air Mouse Keys working -->
     <power>Suspend</power>
     <rewind>Rewind</rewind>
     <fastforward>FastForward</fastforward>
     <next_track>SkipNext</next_track>
     <prev_track>SkipPrevious</prev_track>
     <key id="61586">UpdateLibrary(video)</key> <!-- MX3 Airmouse Zoom/Search button -->
     <key id="61586" mod="longpress">ReloadKeymaps</key> <!-- MX3 Airmouse Zoom/Search button -->
     <play_pause>PlayPause</play_pause>
     <!-- MX3 Airmouse Zoom+ and Zoom- do not work -->
     <key id="61654">ContextMenu</key> <!-- MX3 Airmouse Menu button -->
     <home>ActivateWindow(Home)</home>
     <backspace>Back</backspace>
     <left>Left</left>
     <up>Up</up>
     <enter>Select</enter>
     <enter mod="longpress">ContextMenu</enter>
     <down>Down</down>
     <right>Right</right>
     <volume_up>VolumeUp</volume_up>
     <volume_down>VolumeDown</volume_down>
     <volume_mute>Mute</volume_mute>
     <!-- MX3 Airmouse Mouse on/off is not working -->
     <pageup>PageUp</pageup>
     <pagedown>PageDown</pagedown>
     <key id="53275"><!-- MX3 Airmouse Video Board button, defaults to settings, cannot be changed --></key>
     <!-- MX3 Airmouse [!] is not working -->
     <key id="61585">runscript(special://home/addons/service.vpn.manager/cycle.py)</key> <!-- MX3 Airmouse Blocks button -->
     <key id="61448">Delete</key> <!-- MX3 Airmouse Del / Backspace button -->
     <!-- MX3 Airmouse TV, Mic and colored buttons are not working -->
     <!-- Extra modifications -->
    </keyboard>
  </global>
  <FullscreenVideo>
    <keyboard>
     <key id="61586">AspectRatio</key> <!-- MX3 Airmouse Zoom/Search button -->
     <key id="61654">Fullscreen</key> <!-- MX3 Airmouse Menu button -->
     <backspace>Stop</backspace>
     <enter>PlayPause</enter>
     <menu>OSD</menu>
     <pageup>SubtitleDelayPlus</pageup>
     <pagedown>SubtitleDelayMinus</pagedown>
  	 </keyboard>
  </FullscreenVideo>
  <Videos>
   <keyboard>
     <key id="61654" mod="longpress">Fullscreen</key> <!-- MX3 Airmouse Menu button -->
   </keyboard>
 </Videos>
</keymap>

